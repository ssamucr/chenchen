# Variables de entorno para desarrollo local
# Copia este archivo como .env y ajusta los valores según necesites

# ============ BASE DE DATOS ============
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finanzas
DB_USER=finanzas_user
DB_PASSWORD=finanzas_pass
DB_SSL_MODE=disable

# URL completa de conexión
DATABASE_URL=postgresql://finanzas_user:finanzas_pass@localhost:5432/finanzas

# ============ APLICACIÓN ============
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0

# ============ SEGURIDAD ============
# Genera una clave secreta fuerte para JWT
SECRET_KEY=tu-clave-super-secreta-aqui-cambiar-en-produccion
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ CONFIGURACIÓN REGIONAL ============
DEFAULT_TIMEZONE=America/Mexico_City
DEFAULT_CURRENCY=MXN
DEFAULT_LANGUAGE=es

# ============ LOGS ============
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============ ADMINER (OPCIONAL) ============
ADMINER_PORT=8080

# ============ CONFIGURACIÓN DE CORREO (PARA NOTIFICACIONES) ============
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
SMTP_USE_TLS=true
EMAIL_FROM=tu-email@gmail.com

# ============ CONFIGURACIÓN DE ARCHIVOS ============
UPLOAD_MAX_SIZE=5MB
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png

# ============ REDIS (PARA CACHÉ FUTURO) ============
REDIS_URL=redis://localhost:6379/0

# ============ CONFIGURACIÓN DE BACKUP ============
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Diario a las 2 AM
BACKUP_RETENTION_DAYS=30

# ============ RATE LIMITING ============
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # segundos

# ============ CONFIGURACIÓN DE DESARROLLO ============
RELOAD_ON_CHANGES=true
DEBUG_SQL=false
CORS_ORIGINS=http://localhost:3000,http://localhost:5173